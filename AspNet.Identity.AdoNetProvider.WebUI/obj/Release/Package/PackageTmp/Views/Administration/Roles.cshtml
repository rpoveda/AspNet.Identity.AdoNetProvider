@using AspNet.Identity.AdoNetProvider.WebUI.Infrastructure
@using AspNet.Identity.AdoNetProvider.Domain.Entities

@model IEnumerable<AppRole>

@{
    ViewBag.Title = "System Roles";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Roles
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">
                        No Roles
                    </td>
                </tr>
            }
            else
            {
                foreach (AppRole role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            @using (Html.BeginForm("DeleteRole", "Administration", new { id = role.Id }))
                            {
                                <button class="btn btn-danger btn-xs" type="submit">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
@Html.ActionLink("Create", "CreateRole", null, new { @class = "btn btn-primary" })